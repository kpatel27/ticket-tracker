<% if @tickets.empty? %>
  <h2>No tickets in the system</h2>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Tags</th>
      </tr>
    </thead>
    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= link_to ticket.name, ticket_path(ticket) %></td>
          <td><%= ticket.status %></td>
          <td><%= ticket.tags.map(&:name).join(', ')%></td>
          <td>
            <%= link_to 'Edit', edit_ticket_path(ticket) %>
            <%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Delete ticket?'} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
