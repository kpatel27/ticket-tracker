<!DOCTYPE html>
<html>
  <head>
    <title>TicketTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="main-nav">
        <ul class="left">
          <li><strong>Ticketing</strong></li>
          <li><%= link_to "Projects", projects_path %></li>
          <li><%= link_to "Tickets", tickets_path %></li>
          <li><%= link_to "Tags", tags_path %></li>
          <% if current_user %>
            <li>Signed in as <%= current_user.name %><%= link_to 'Logout', '/logout' %></li>
          <% else %>
            <li><%= link_to 'Login', '/login' %> or <%= link_to 'Signup', '/signup' %></li>
          <% end %>
        </ul>
    </nav>

    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
