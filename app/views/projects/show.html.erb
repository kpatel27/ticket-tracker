<h1><%= @project.name %></h1>
<p><%= @project.description %></p>
<%= link_to('Delete', @project, method: :delete, data: {confirm: 'Confirm delete?'}) %>
<%= link_to('Edit', edit_project_path(@project)) %>

<h2>Tickets</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @project.tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.name %></td>
        <td><%= ticket.status %></td>
        <td>
          <%= link_to 'Edit', edit_ticket_path(ticket) %>
          <%= link_to 'Delete', ticket, method: :delete, data: { confirm: 'Delete Ticket?'} %>
        </td>
      </tr>
    <%end %>
  </tbody>
</table>
