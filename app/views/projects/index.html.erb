<h1>Projects</h1>
<% if @projects.empty? %>
  <p>There are no projects!</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Open Tickets</th>
        <th>Total Tickets</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td>
            <a href="/projects/<%= project.id %>"><strong><%= project.name %></strong></a>
            <br/>
            <%= project.description %>
          </td>
          <td><%= project.tickets.select {|ticket| ticket.status != 'fixed'}.count %></td>
          <td><%= project.tickets.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br/>
<%= link_to 'Add Project', new_project_path %>
